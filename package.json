{
  "name": "phormal",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite --config config/vite.config.ts",
    "build": "rollup -c && lerna run build",
    "test:e2e": "cypress open --e2e --config-file config/cypress.config.ts",
    "lint:ts": "npx eslint -c config/.eslintrc.cjs .",
    "lint:ts:fix": "npx eslint -c config/.eslintrc.cjs . --fix",
    "lint:styles": "npx stylelint --config config/.stylelintrc.json \"**/*.scss\"",
    "lint:styles:fix": "npx stylelint --config config/.stylelintrc.json \"**/*.scss\" --fix",
    "clean:packages": "rm -rf ./packages/*/dist",
    "docs:dev": "cd docs && npm run dev"
  },
  "dependencies": {
    "maquette": "^3.5.3"
  },
  "devDependencies": {
    "@atomico/rollup-plugin-sizes": "^1.1.4",
    "@lerna/batch-packages": "^3.16.0",
    "@lerna/filter-packages": "^6.2.0",
    "@lerna/project": "^6.2.0",
    "@rollup/plugin-babel": "^6.0.3",
    "@rollup/plugin-commonjs": "^24.0.0",
    "@rollup/plugin-node-resolve": "^15.0.1",
    "@rollup/plugin-typescript": "^10.0.1",
    "@types/uniqid": "^5.3.2",
    "@typescript-eslint/eslint-plugin": "^5.47.1",
    "@typescript-eslint/parser": "^5.47.1",
    "@vitejs/plugin-vue": "^3.2.0",
    "@vue/tsconfig": "^0.1.3",
    "cypress": "^11.2.0",
    "dotenv": "^16.0.3",
    "eslint": "^8.30.0",
    "fs": "^0.0.1-security",
    "lerna": "^6.1.0",
    "minimist": "^1.2.7",
    "path": "^0.12.7",
    "rollup-plugin-auto-external": "^2.0.0",
    "rollup-plugin-sourcemaps": "^0.6.3",
    "rollup-plugin-typescript2": "^0.34.1",
    "sass": "^1.56.1",
    "stylelint": "^14.16.0",
    "stylelint-config-standard": "^29.0.0",
    "stylelint-config-standard-scss": "^6.1.0",
    "typescript": "^4.6.4",
    "vite": "^3.2.5",
    "vue": "^3.2.41",
    "vue-router": "^4.1.6",
    "vue-tsc": "^1.0.9"
  },
  "workspaces": [
    "packages/*"
  ]
}
