{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "noEmit": false,
    "declaration": true,
    "types": ["vite/client", "cypress", "node"]
  },
  "include": [
	"packages/**/*.ts",
	"packages/**/*.d.ts",
	"lib/**/*.tsx",
	"lib/**/*.vue",
  ],
    "exclude": ["tests/**/*.ts"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
